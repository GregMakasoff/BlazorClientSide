{
<EditForm Model="@speaker" OnValidSubmit="@HandleDelete">
  <DataAnnotationsValidator />
  <ValidationSummary />

  <InputText placeholder="First Name" id="firstName" @bind-Value="@speaker.FirstName" />
  <br />
