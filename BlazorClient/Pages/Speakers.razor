  <button type="submit" value="Delete" class="btn btn-danger">Submit</button>

    @code {
      private async void HandleUpdate() {
        string endpoint = $"{baseUrl}api/speaker/{speaker.SpeakerId}";

        await httpClient.SendJsonAsync(HttpMethod.Put, endpoint, speaker);

        await load();
        mode = MODE.None;

        StateHasChanged(); // causes the page to get automatically refreshed
      }
    }
  </EditForm>
}

